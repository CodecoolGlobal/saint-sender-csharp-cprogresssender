<Window x:Class="SaintSender.DesktopUI.Views.SingleMail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SaintSender.DesktopUI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SingleMail">

    <Grid>
        <Label Content="{Binding Mail.Sender}" HorizontalAlignment="Left" Height="42" Margin="10,23,0,0" VerticalAlignment="Top" Width="383"/>
        <Label Content="{Binding Mail.Date}" HorizontalAlignment="Right" Height="42" Margin="438,23,0,0" VerticalAlignment="Top" Width="322"/>
        <Label Content="{Binding Mail.Subject}" HorizontalAlignment="Left" Height="42" Margin="10,79,0,0" VerticalAlignment="Top" Width="294"/>
        <Label Content="{Binding Mail.Message}" HorizontalAlignment="Left" Height="269" Margin="106,140,0,0" VerticalAlignment="Top" Width="580"/>

    </Grid>
</Window>
